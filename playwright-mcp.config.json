{
  "mcpServers": {
    "playwright": {
      "command": "npx",
      "args": [
        "@playwright/mcp@latest"
      ]
    }
  },
  "browserOptions": {
    "headless": false,
    "viewport": {
      "width": 1280,
      "height": 720
    },
    "ignoreHTTPSErrors": true
  },
  "contextOptions": {
    "acceptDownloads": true,
    "permissions": ["geolocation", "clipboard-read", "clipboard-write"]
  }
}